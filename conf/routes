# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# ui
GET		/								controllers.PTBEController.viewAddQuestion()
GET		/ad								controllers.PTBEController.viewUpdateAdURL()
GET		/version						controllers.PTBEController.viewVersion()
POST	/version						controllers.PTBEController.submitVersion()
GET		/viewRegisterUser				controllers.PTBEController.viewRegisterUser()
POST	/submitAddQuestion				controllers.PTBEController.submitAddQuestion()	
POST	/submitAdURL					controllers.PTBEController.submitAdURL()
GET		/viewResetPassword				controllers.PTBEController.viewResetPassword()
POST	/submitResetPassword			controllers.PTBEController.submitResetPassword()
GET		/verifyEmail					controllers.PTBEController.verifyEmail(ticket:String)

# api
GET		/api/1/getQuestionBank			controllers.PTBEController.getQuestionBank()
GET		/api/1/getQuestionBankPremium	controllers.PTBEController.getQuestionBankPremium()
POST	/api/1/resetPassword			controllers.PTBEController.resetPassword()
POST	/api/1/authenticateUser			controllers.PTBEController.authenticateUser()
GET		/api/1/getVersion				controllers.PTBEController.getVersionJSON()
GET		/api/1/getAd					controllers.PTBEController.getAd()
POST	/api/1/submitSignUp				controllers.PTBEController.submitSignUp()
POST	/api/1/changePassword			controllers.PTBEController.submitChangePassword()
POST	/api/1/submitTestResult			controllers.PTBEController.submitTestResult()
GET		/api/1/getTopics				controllers.PTBEController.getTopics()
GET		/api/1/getTestHistory			controllers.PTBEController.getTestHistory()
GET		/api/1/getMOTD					controllers.PTBEController.getMOTD()
GET		/ping							controllers.PTBEController.ping()


# ask dottie
GET		/askdottie						controllers.AskDottieController.processRequestGet()
POST	/askdottie						controllers.AskDottieController.processRequestPost()